<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jingtao8a.mapper.StatisticsInfoMapper">

	<!-- 实体映射 -->
	<resultMap id="base_result_map" type="org.jingtao8a.entity.po.StatisticsInfo">
	<!-- 统计日期-->
		<result column="statistics_date" property="statisticsDate"/>
	<!-- 用户ID-->
		<result column="user_id" property="userId"/>
	<!-- 数据统计类型-->
		<result column="data_type" property="dataType"/>
	<!-- 统计数量-->
		<result column="statistics_count" property="statisticsCount"/>
	</resultMap>
	<!-- 通用查询结果列 -->
	<sql id="base_column_list">
		statistics_date ,user_id ,data_type ,statistics_count 
	</sql>
	<!-- 基础查询条件-->
	<sql id="base_query_condition">
		<if test="query.statisticsDate != null and query.statisticsDate !=''">
				and statistics_date = #{query.statisticsDate}
		</if>
		<if test="query.userId != null and query.userId !=''">
				and user_id = #{query.userId}
		</if>
		<if test="query.dataType != null">
				and data_type = #{query.dataType}
		</if>
		<if test="query.statisticsCount != null">
				and statistics_count = #{query.statisticsCount}
		</if>
	</sql>

	<!-- 扩展的查询条件 -->
	<sql id="base_query_condition_extend">
		<if test="query.statisticsDateFuzzy != null and query.statisticsDateFuzzy != ''">
			 and statistics_date like concat('%', #{query.statisticsDateFuzzy}, '%')
		</if>
		<if test="query.userIdFuzzy != null and query.userIdFuzzy != ''">
			 and user_id like concat('%', #{query.userIdFuzzy}, '%')
		</if>
	</sql>

	<!-- 通用查询条件 -->
	<sql id="query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="base_query_condition_extend"/>
		</where>
	</sql>

	<!-- 查询列表 -->
	<select id="selectList" resultMap="base_result_map">
		SELECT <include refid="base_column_list"/> FROM statistics_info <include refid="query_condition"/>
		<if test="query.orderBy!=null">
			order by ${query.orderBy}
		</if>
		<if test="query.simplePage!=null">
			limit #{query.simplePage.start}, #{query.simplePage.end}
		</if>
	</select>

	<!-- 查询数量 -->
	<select id="selectCount" resultType="java.lang.Long">
		SELECT count(1) FROM statistics_info <include refid="query_condition"/>
	</select>

	<!-- 单条插入 -->
	<insert id="insert" parameterType="org.jingtao8a.entity.po.StatisticsInfo">

		INSERT INTO statistics_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.statisticsDate != null">
				statistics_date,
			</if>
			<if test="bean.userId != null">
				user_id,
			</if>
			<if test="bean.dataType != null">
				data_type,
			</if>
			<if test="bean.statisticsCount != null">
				statistics_count,
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">
			<if test="bean.statisticsDate != null">
				#{bean.statisticsDate},
			</if>
			<if test="bean.userId != null">
				#{bean.userId},
			</if>
			<if test="bean.dataType != null">
				#{bean.dataType},
			</if>
			<if test="bean.statisticsCount != null">
				#{bean.statisticsCount},
			</if>
		</trim>
	</insert>

	<!-- 插入或者更新 (匹配有值的字段) -->
	<insert id="insertOrUpdate" parameterType="org.jingtao8a.entity.po.StatisticsInfo">

		INSERT INTO statistics_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.statisticsDate != null">
				statistics_date,
			</if>
			<if test="bean.userId != null">
				user_id,
			</if>
			<if test="bean.dataType != null">
				data_type,
			</if>
			<if test="bean.statisticsCount != null">
				statistics_count,
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">
			<if test="bean.statisticsDate != null">
				#{bean.statisticsDate},
			</if>
			<if test="bean.userId != null">
				#{bean.userId},
			</if>
			<if test="bean.dataType != null">
				#{bean.dataType},
			</if>
			<if test="bean.statisticsCount != null">
				#{bean.statisticsCount},
			</if>
		</trim>
		on DUPLICATE key update
		<trim prefix="" suffix="" suffixOverrides=",">
			<if test="bean.statisticsCount != null">
				statistics_count = VALUES(statistics_count),
			</if>
		</trim>
	</insert>
	<!-- 添加(批量插入)-->
	<insert id="insertBatch" parameterType="org.jingtao8a.entity.po.StatisticsInfo" >
		INSERT INTO statistics_info (statistics_date,user_id,data_type,statistics_count) VALUES
		<foreach collection="list" item="item" separator="," >
			(#{item.statisticsDate},#{item.userId},#{item.dataType},#{item.statisticsCount})
		</foreach>
	</insert>
	<!-- 批量插入或更新-->
	<insert id="insertOrUpdateBatch" parameterType="org.jingtao8a.entity.po.StatisticsInfo" >
		INSERT INTO statistics_info (statistics_date,user_id,data_type,statistics_count) VALUES
		<foreach collection="list" item="item" separator="," >
			(#{item.statisticsDate},#{item.userId},#{item.dataType},#{item.statisticsCount})
		</foreach>
		on DUPLICATE key update
		<trim prefix="" suffix="" suffixOverrides=",">
			statistics_count = VALUES(statistics_count),
		</trim>
	</insert>
	<!-- 根据StatisticsDateAndUserIdAndDataType查找-->
	<select id="selectByStatisticsDateAndUserIdAndDataType" resultMap="base_result_map">
		select <include refid="base_column_list"/> from statistics_info  where  statistics_date = #{statisticsDate} and user_id = #{userId} and data_type = #{dataType} 
	</select>
	<!-- 根据StatisticsDateAndUserIdAndDataType删除-->
	<delete id="deleteByStatisticsDateAndUserIdAndDataType" >
		delete from statistics_info  where  statistics_date = #{statisticsDate} and user_id = #{userId} and data_type = #{dataType} 
	</delete>
	<!-- 根据StatisticsDateAndUserIdAndDataType更改-->
	<update id="updateByStatisticsDateAndUserIdAndDataType" parameterType="org.jingtao8a.entity.po.StatisticsInfo">
		UPDATE statistics_info
		<set>
			<if test="bean.statisticsDate != null">
				statistics_date=#{bean.statisticsDate},
			</if>
			<if test="bean.userId != null">
				user_id=#{bean.userId},
			</if>
			<if test="bean.dataType != null">
				data_type=#{bean.dataType},
			</if>
			<if test="bean.statisticsCount != null">
				statistics_count=#{bean.statisticsCount},
			</if>
		</set>
		where  statistics_date = #{statisticsDate} and user_id = #{userId} and data_type = #{dataType} 
	</update>

</mapper>