		<id column="message_id" property="messageId"/>
	<!-- 用户ID-->
		<result column="user_id" property="userId"/>
	<!-- 视频ID-->
		<result column="video_id" property="videoId"/>
	<!-- -->
		<result column="message_type" property="messageType"/>
	<!-- 发送人ID-->
		<result column="send_user_id" property="sendUserId"/>
	<!-- 0:未读 1:已读-->
		<result column="read_type" property="readType"/>
	<!-- 创建时间-->
		<result column="create_time" property="createTime"/>
	<!-- 扩展信息-->
		<result column="extend_json" property="extendJson"/>
	</resultMap>
	<!-- 通用查询结果列 -->
	<sql id="base_column_list">
		message_id ,user_id ,video_id ,message_type ,send_user_id ,read_type ,create_time ,extend_json 
	</sql>
	<!-- 基础查询条件-->
	<sql id="base_query_condition">
		<if test="query.messageId != null">
				and message_id = #{query.messageId}
		</if>
		<if test="query.userId != null and query.userId !=''">
				and user_id = #{query.userId}
		</if>
		<if test="query.videoId != null and query.videoId !=''">
				and video_id = #{query.videoId}
		</if>
		<if test="query.messageType != null">
				and message_type = #{query.messageType}
		</if>
		<if test="query.sendUserId != null and query.sendUserId !=''">
				and send_user_id = #{query.sendUserId}
		</if>
		<if test="query.readType != null">
				and read_type = #{query.readType}
		</if>
		<if test="query.createTime != null">
				and create_time = #{query.createTime}
		</if>
		<if test="query.extendJson != null and query.extendJson !=''">
				and extend_json = #{query.extendJson}
		</if>
	</sql>

	<!-- 扩展的查询条件 -->
	<sql id="base_query_condition_extend">
		<if test="query.userIdFuzzy != null and query.userIdFuzzy != ''">
			 and user_id like concat('%', #{query.userIdFuzzy}, '%')
		</if>
		<if test="query.videoIdFuzzy != null and query.videoIdFuzzy != ''">
			 and video_id like concat('%', #{query.videoIdFuzzy}, '%')
		</if>
		<if test="query.sendUserIdFuzzy != null and query.sendUserIdFuzzy != ''">
			 and send_user_id like concat('%', #{query.sendUserIdFuzzy}, '%')
		</if>
		<if test="query.createTimeStart != null and query.createTimeStart != ''">
			<![CDATA[ and create_time >= str_to_date(#{query.createTimeStart}, '%Y-%m-%d')]]>
		</if>
		<if test="query.createTimeEnd != null and query.createTimeEnd != ''">
			<![CDATA[ and create_time < date_sub(str_to_date(#{query.createTimeEnd}, '%Y-%m-%d'), interval - 1 day)]]>
		</if>
		<if test="query.extendJsonFuzzy != null and query.extendJsonFuzzy != ''">
			 and extend_json like concat('%', #{query.extendJsonFuzzy}, '%')
		</if>
	</sql>

	<!-- 通用查询条件 -->
	<sql id="query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="base_query_condition_extend"/>
		</where>
	</sql>

	<!-- 查询列表 -->
	<select id="selectList" resultMap="base_result_map">
		SELECT <include refid="base_column_list"/> FROM user_message <include refid="query_condition"/>
		<if test="query.orderBy!=null">
			order by ${query.orderBy}
		</if>
		<if test="query.simplePage!=null">
			limit #{query.simplePage.start}, #{query.simplePage.end}
		</if>
	</select>

