	<!-- 列表ID-->
		<result column="series_id" property="seriesId"/>
	<!-- 视频ID-->
		<result column="video_id" property="videoId"/>
	<!-- 用户ID-->
		<result column="user_id" property="userId"/>
	<!-- 排序-->
		<result column="sort" property="sort"/>
